<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#3f3f3f"
    tools:context="edu.smartdoor.imank.smartdoor.PIActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3f3f3f"
        android:dividerHeight="10.0sp"
        android:id="@+id/lv_pi"
        android:layout_weight="0.43" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Raspberry Pi Name"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/username_selector"
        android:id="@+id/et_piname"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_scan"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_button"
        android:id="@+id/bt_scanqr"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:hint="Trouble Scanning? Enter Raspberry ID Manually Here"
        android:background="@drawable/username_selector"
        android:id="@+id/etRaspberryPi"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_add_pi"
        android:id="@+id/bt_add_pi"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:textStyle="bold" />
</LinearLayout>
