<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="110dp"
    android:paddingLeft="80dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="@drawable/background"
    style="@style/AppTheme">

    <TextView
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/login_title"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="#3f3f3f" />

    <EditText
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/username_icon_selector"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:id="@+id/etUsername"
        android:layout_above="@+id/etPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/username_selector"
        android:hint="Username"
        android:gravity="left|center_vertical" />

    <EditText
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/password_icon_selector"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:id="@+id/etPassword"
        android:password="true"
        android:layout_above="@+id/bt_sign_in"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/password_selector"
        android:hint="Password"
        android:gravity="left|center_vertical" />

    <Button
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="@string/action_sign_in"
        android:layout_marginTop="10dp"
        android:id="@+id/bt_sign_in"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:textStyle="bold" />

    <Button
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="@string/action_register"
        android:layout_marginTop="10dp"
        android:id="@+id/bt_register_page"
        android:layout_below="@+id/bt_sign_in"
        android:layout_alignStart="@+id/bt_sign_in"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>
